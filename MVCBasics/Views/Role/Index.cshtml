@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<h1>All Roles</h1>
<div>
    <hr />
    <div class="row">
        <div class="col-sm-2">
            ID
        </div>
        <div class="col-sm-2">
            Name
        </div>
    </div>
</div>
@foreach (var role in Model)
{
    <div>
        <hr />
        <div class="row">
            <div class="col-sm-2">
                @role.Id
            </div>
            <div class="col-sm-2">
                @role.Name
            </div>
            <div class="col-sm-1">
                *@Html.ActionLink("Edit", "Edit", new { id = role.Id })
            </div>
        </div>
    </div>
}
<a class="btn btn-primary" asp-controller="Role" asp-action="Create">Create</a>